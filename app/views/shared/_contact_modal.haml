.modal.contact-modal
  .modal-background.contact-modal-background
  .modal-card
    %header.modal-card-head
      %p.modal-card-title= t('.title')
      %button.delete.contact-modal-close{"aria-label" => "close"}
    %section.modal-card-body
      = simple_form_for :contact, defaults: { wrapper: false }, :url => {:action => :create, :controller => :home}, html: { class: "form-horizontal"} do |f|
        .field
          %label.label= t('.name')
          .control
            = f.input :name, placeholder: "#{t('.name')}", input_html: { class: 'input input' }, label: false
        .field
          %label.label= t('.email')
          .control
            =f.input :email, placeholder: "#{t('.placeholder')}", min: 0, input_html: { class: 'input input' }, label: false
        .field
          %label.label= t('.phone')
          .control
            =f.input :phone, placeholder: "#{t('.phone_number')}", min: 0, input_html: { class: 'input input' }, label: false
        .field
          %label.label= t('.message')
          .control
            = f.input :message, as: :text, placeholder: "#{t('.placeholder_message')}", input_html: { class: 'textarea textarea' }, label: false
        %footer.modal-card-foot
          = f.button :submit, "#{t('.send')}", class: "button button is-info"
          %button.button.cancel.contact-modal-cancel.is-danger= t('.cancel')
